<Window x:Class="CallLongRunningFunctionAsync.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="MainWindow"
		Height="350"
		Width="525">

	<DockPanel>
		<Button DockPanel.Dock="Bottom"
				Content="What the answer to life, the universe, well everything?"
				Padding="10,5"
				Margin="10,0"
				Click="Button_Click" />

		<Label Margin="5,10"
			   HorizontalAlignment="Center"
			   VerticalAlignment="Center"
			   FontSize="48"
			   Content="{Binding Output}" />
	</DockPanel>

</Window>
